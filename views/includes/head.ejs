<head>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <!-- Add Bootstrap if you use it -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .static-page { max-width: 700px; margin: 2em auto; padding: 2em; background: #fff; border-radius: 1em; box-shadow: 0 2px 16px rgba(0,0,0,0.08); font-family: 'Plus Jakarta Sans', sans-serif;}
    .static-page h1 { color: #fe424d; font-family: "Pacifico", cursive; margin-bottom: 1em;}
    .faq-q { color: #ff3366; margin-top: 1.5em; font-weight: bold;}
    .faq-a { margin-bottom: 1em; color: #222; }
    @media (prefers-color-scheme: dark) {
      .static-page { background: #181b20 !important; color: #f1f1f1 !important; }
      .static-page h1, .faq-q { color: #ff66a3 !important; }
      .faq-a, .static-page p, .static-page li { color: #f1f1f1 !important; }
      .static-page ul li { color: #f1f1f1 !important; }
      .static-page a { color: #ff66a3 !important; }
    }
  </style>
</head>