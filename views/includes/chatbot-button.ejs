<!-- Floating Chatbot Button -->
<style>
  #chatbot-btn {
    position: fixed;
    left: 30px;
    bottom: 40px;
    z-index: 9999;
    background: #fe424d;
    color: #fff;
    border: none;
    border-radius: 50%;
    width: 60px;
    height: 60px;
    font-size: 2rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.2);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  #chatbot-window {
    display: none;
    position: fixed;
    left: 100px;
    bottom: 110px;
    width: 350px;
    height: 500px;
    background: #fff;
    border-radius: 1em;
    box-shadow: 0 2px 16px rgba(0,0,0,0.18);
    z-index: 10000;
    overflow: hidden;
    flex-direction: column;
  }
  @media (prefers-color-scheme: dark) {
    #chatbot-btn {
      background: #ff66a3;
      color: #181b20;
      box-shadow: 0 2px 8px rgba(0,0,0,0.4);
    }
    #chatbot-btn:hover {
      background: #fe424d;
      color: #fff;
    }
    #chatbot-window {
      background: #181b20;
      color: #f1f1f1;
      border: 1px solid #333;
      box-shadow: 0 2px 16px rgba(0,0,0,0.5);
    }
    #chatbot-window iframe {
      background: #181b20;
      color-scheme: dark;
    }
  }
  #itinerary-btn {
  position: fixed;
  left: 30px;
  bottom: 110px; /* higher than chatbot */
  z-index: 9999;
  background: #ffd166;
  color: #232526;
  border: none;
  border-radius: 50%;
  width: 60px;
  height: 60px;
  font-size: 2rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.18);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s, transform 0.2s;
  text-decoration: none;
}
#itinerary-btn:hover, #itinerary-btn:focus {
  background: #fe424d;
  color: #fff;
  box-shadow: 0 4px 16px #fe424d55;
  transform: scale(1.08);
}
@media (prefers-color-scheme: dark) {
  #itinerary-btn {
    background: #232526;
    color: #ffd166;
    box-shadow: 0 2px 8px rgba(0,0,0,0.4);
  }
  #itinerary-btn:hover, #itinerary-btn:focus {
    background: #ffd166;
    color: #232526;
  }
}
</style>
<!-- Floating Itinerary Button -->
<a href="/itinerary/landing" id="itinerary-btn" title="Open Itinerary">
  <i class="fa-solid fa-suitcase-rolling"></i>
</a>
<button id="chatbot-btn" title="Chat with AI">
  <i class="fa-solid fa-robot"></i>
</button>
<div id="chatbot-window">
  <iframe src="/chatbot" width="100%" height="100%" frameborder="0"></iframe>
</div>
<script>
  const btn = document.getElementById('chatbot-btn');
  const win = document.getElementById('chatbot-window');
  btn.onclick = () => {
    win.style.display = win.style.display === 'flex' ? 'none' : 'flex';
  };
</script>
