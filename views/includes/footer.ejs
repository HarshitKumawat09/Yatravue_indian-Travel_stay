<style>
/* Main Multi-Column Footer */
.main-footer {
  background: #f8f9fa;
  border-top: 1px solid #eee;
  padding: 2.5em 0 1.5em 0;
  margin-top: 2em;
}
.footer-columns {
  display: flex;
  justify-content: center;
  gap: 4em;
  max-width: 1200px;
  margin: 0 auto;
  flex-wrap: wrap;
}
.footer-col {
  min-width: 180px;
  display: flex;
  flex-direction: column;
  gap: 0.5em;
}
.footer-col h5 {
  color: #fe424d;
  font-family: "Plus Jakarta Sans", sans-serif;
  font-weight: 700;
  margin-bottom: 0.7em;
  font-size: 1.1em;
}
.footer-col a {
  color: #444;
  text-decoration: none;
  font-size: 1em;
  transition: color 0.2s;
}
.footer-col a:hover {
  color: #fe424d;
  text-decoration: underline;
}
@media (max-width: 800px) {
  .footer-columns { flex-direction: column; gap: 2em; align-items: center; }
  .footer-col { min-width: 0; width: 90%; }
}

/* Simple Bottom Footer */
.f-info {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 1em 2em;
  border-top: 1px solid #eee;
  font-size: 1em;
  text-align: center;
  height: auto;
}
.f-info-socials, .f-info-links, .f-info-brand {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.f-info-socials i {
  font-size: 1.5em;
  margin-right: 1em;
  color: #fe424d;
  transition: color 0.2s;
}
.f-info-socials i:last-child { margin-right: 0; }
.f-info-socials i:hover { color: #ff3366; }
.f-info-brand {
  font-weight: 600;
  color: #444;
  margin: 0.5em 0;
}
.f-info-links a {
  margin-right: 1em;
  color: #444;
  text-decoration: none;
  transition: color 0.2s;
}
.f-info-links a:last-child { margin-right: 0; }
.f-info-links a:hover { color: #fe424d; text-decoration: underline; }
@media (max-width: 600px) {
  .f-info { flex-direction: column; gap: 0.7em; padding: 1em 0.5em; font-size: 0.95em;}
  .f-info-links a { margin-right: 0.5em; }
}

/* DARK MODE SUPPORT */
@media (prefers-color-scheme: dark) {
  .main-footer {
    background: #181b20 !important;
    border-top: 1px solid #23272f !important;
    color: #f1f1f1 !important;
  }
  .main-footer .footer-col h5 {
    color: #ff66a3 !important;
  }
  .main-footer .footer-col a {
    color: #f1f1f1 !important;
  }
  .main-footer .footer-col a:hover {
    color: #ff66a3 !important;
  }
  .footer-columns {
    color: #f1f1f1 !important;
  }
  .f-info {
    background: #23272f !important;
    border-top: 1px solid #181b20 !important;
    color: #f1f1f1 !important;
  }
  .f-info-brand {
    color: #f1f1f1 !important;
  }
  .f-info-links a {
    color: #f1f1f1 !important;
  }
  .f-info-links a:hover {
    color: #ff66a3 !important;
  }
  .f-info-socials i {
    color: #ff66a3 !important;
  }
  .f-info-socials i:hover {
    color: #fe424d !important;
  }
}
</style>