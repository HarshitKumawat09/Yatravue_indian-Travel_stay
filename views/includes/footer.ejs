    background 0.3s cubic-bezier(.4,0,.2,1);
  cursor: pointer;
}

.feature-card:hover {
  box-shadow: 0 4px 24px 0 rgba(254,66,77,0.13);
  border-color: #fe424d;
  transform: translateY(-6px) scale(1.03);
}

.feature-icon {
