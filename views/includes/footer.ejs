    transform 0.3s cubic-bezier(.4,0,.2,1);
}

.feature-card-title {
  font-weight: 700;
  color: #fe424d;
  margin-bottom: 0.5rem;
  font-size: 1.15rem;
}

.feature-card-desc {
  color: #232526;
  font-size: 1rem;
  opacity: 0.85;
}

@media (prefers-color-scheme: dark) {
  
  .feature-card {
    background: #232526;
    border: 1.5px solid #fe424d;
    color: #cc3434;
  }
  .feature-card-title,
  .feature-icon {
    color: #ffd166;
  }
  .feature-card-desc {
    color: #ffd166;
    opacity: 0.85;
  }
}
</style>
