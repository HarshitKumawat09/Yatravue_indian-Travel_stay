  background: #fff;
  min-width: 0;
  display: flex;
  flex-direction: column;
}

.itinerary-header h2 {
  color: var(--primary-dark);
  font-size: 2rem;
  margin-bottom: 0.2rem;
  font-weight: 700;
}

