  background: var(--primary);
  color: var(--text-light);
  border: none;
  border-radius: 0.7rem;
  padding: 0.7rem 1.2rem;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s, color 0.2s, box-shadow 0.2s;
  margin-top: 0.3rem;
  box-shadow: 0 2px 8px #fe424d22;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

