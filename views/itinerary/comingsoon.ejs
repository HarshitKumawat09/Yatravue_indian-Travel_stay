}

.day-summary, .trip-summary {
  background: #fffbe6;
  border-radius: 0.7rem;
  padding: 0.7rem 1rem;
  font-size: 1rem;
  color: var(--primary-dark);
  margin-bottom: 0.5rem;
  box-shadow: 0 2px 8px #ffd16622;
