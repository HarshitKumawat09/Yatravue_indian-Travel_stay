        <% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/signup.css" />

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 90vh;">
  <!-- Logo and Brand -->
  <div class="mb-2 text-center">
    <div class="logo-gradient-box mx-auto mb-1 position-relative" style="width:48px; height:48px; border-radius:16px; background: linear-gradient(135deg, #fe424d 0%, #d86783 60%, #ffd166 100%); display:flex; align-items:center; justify-content:center; box-shadow: 0 4px 24px 0 rgba(254,66,77,0.18), 0 1.5px 8px 0 rgba(216,103,131,0.12);">
      <div class="position-absolute" style="top: 0.3rem; left: 0.3rem; width: 0.5rem; height: 0.5rem; background: rgba(255,255,255,0.4); border-radius: 50%;"></div>
      <div class="position-absolute" style="bottom: 0.3rem; right: 0.3rem; width: 0.3rem; height: 0.3rem; background: rgba(255,255,255,0.3); border-radius: 50%;"></div>
      <span style="color:#fff; font-weight:900; font-size:1.3rem; letter-spacing:-1px; text-shadow:0 1px 2px rgba(0,0,0,0.3); font-family:system-ui, -apple-system, sans-serif; z-index:1;">YV</span>
    </div>
    <span class="brand-name pacifico-regular" style="font-size:2rem; color:#fe424d; text-shadow:1px 2px 8px rgba(254,66,77,0.12), 0 0 1px #fe424d; letter-spacing:1px; display:block;">YatraVue</span>
    <h2 class="signup-title text-center mb-2" style="font-weight:800;">Join YatraVue</h2>
    <div class="text-center mb-3" style="color:#888;">Start your authentic Indian journey</div>
  </div>
  <div class="signup-container" style="max-width:350px; width:100%; border-radius:16px; box-shadow:0 4px 32px 0 rgba(0,0,0,0.08); padding:2rem 2rem 1.5rem 2rem;">
    <h2 class="signup-title text-center mb-2" style="font-weight:800;">Create Account</h2>
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" type="text" class="form-control" required placeholder="Enter your username" />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input name="email" id="email" type="email" class="form-control" required placeholder="Enter your email" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control" required placeholder="Enter your password" />
      </div>
      <div class="d-grid gap-2 mb-2">
        <button class="btn" type="submit" style="background: linear-gradient(90deg, #fe424d 0%, #d86783 100%); color:#fff; font-weight:700;">Sign Up</button>
      </div>
      <div class="text-center" style="font-size:0.97rem;">
        Already have an account? <a href="/login" style="color:#d86783; font-weight:600; text-decoration:none;">Login</a>
      </div>
    </form>
  </div>
  <div class="footer mt-3 text-center" style="color:#b0aeb8; font-size:0.95rem;">
    By signing up, you agree to our
    <a href="/terms" style="color:#fe424d; text-decoration:none;">Terms of Service</a> Â·
    <a href="/privacy" style="color:#fe424d; text-decoration:none;">Privacy Policy</a>
  </div>
</div>