<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/signup.css" />

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 90vh;">
  <!-- Logo and Brand -->
  <div class="mb-2 text-center">
    <div class="logo-gradient-box mx-auto mb-1" style="width:48px; height:48px; border-radius:16px; background: linear-gradient(135deg, #fe424d 0%, #d86783 60%, #ffd166 100%); display:flex; align-items:center; justify-content:center; box-shadow: 0 4px 24px 0 rgba(254,66,77,0.18), 0 1.5px 8px 0 rgba(216,103,131,0.12);">
      <span style="color:#fff; font-weight:900; font-size:1.3rem; letter-spacing:-1px; text-shadow:0 1px 2px rgba(0,0,0,0.3); font-family:system-ui, -apple-system, sans-serif;">YV</span>
    </div>
    <span class="brand-name pacifico-regular" style="font-size:2rem; color:#fe424d; text-shadow:1px 2px 8px rgba(254,66,77,0.12), 0 0 1px #fe424d; letter-spacing:1px; display:block;">YatraVue</span>

    <h2 class="signup-title text-center mb-2" style="font-weight:800;">Welcome Back</h2>
    <div class="text-center mb-3" style="color:#888;">Sign in to continue your authentic Indian journey</div>
  </div>
  <div class="signup-container" style="max-width:350px; width:100%; border-radius:16px; box-shadow:0 4px 32px 0 rgba(0,0,0,0.08); padding:2rem 2rem 1.5rem 2rem;">
    <h2 class="signup-title text-center mb-2" style="font-weight:800;">Login</h2>
    <div class="text-center mb-3" style="color:#888;">Enter your credentials to access your account</div>
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" type="text" class="form-control" required placeholder="Enter your username" />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input name="password" id="password" type="password" class="form-control" required placeholder="Enter your password" />
      </div>
      <div class="d-grid gap-2 mb-2">
        <button class="btn" type="submit" style="background: linear-gradient(90deg, #fe424d 0%, #d86783 100%); color:#fff; font-weight:700;">Sign In</button>
      </div>
      <!-- <div class="text-center my-3" style="color:#bbb; font-size:0.95rem;">
        <span>OR CONTINUE WITH</span>
      </div>
      <div class="d-flex gap-2 mb-3">
        <button type="button" class="btn btn-light flex-fill border" style="font-weight:600;"><i class="fa-brands fa-google me-1"></i> Google</button>
        <button type="button" class="btn btn-light flex-fill border" style="font-weight:600;"><i class="fa-brands fa-twitter me-1"></i> Twitter</button>
      </div> -->
      <div class="text-center" style="font-size:0.97rem;">
        Don't have an account? <a href="/signup" style="color:#d86783; font-weight:600; text-decoration:none;">Sign up</a>
      </div>
    </form>
  </div>
  <div class="footer mt-3 text-center" style="color:#b0aeb8; font-size:0.95rem;">
    By signing in, you agree to our
    <a href="/terms" style="color:#fe424d; text-decoration:none;">Terms of Service</a> Â·
    <a href="/privacy" style="color:#fe424d; text-decoration:none;">Privacy Policy</a>
  </div>
</div>